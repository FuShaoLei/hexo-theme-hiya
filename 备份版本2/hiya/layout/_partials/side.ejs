<!--去重-->
function unique(arr){
    return Array.from(new Set(arr));
}
<!--判断是否有重复的函数-->
function usedornot(y,arrs){
    var a=0;
    for(var u=0;u<arrs.length;u++){
        if(y === arrs[u]) {
            a=a+1;
            return false;
        }
    }
    if(a===0) {
        return true;
    }
};

